<p id="notice"><%= notice %></p>

<h1>Listing Deals</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Description</th>
      <th>Goal</th>
      <th>Location</th>
      <th>Start</th>
      <th>End</th>
      <th>Published</th>
      <th>Private</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= deal.title %></td>
        <td><%= deal.image %></td>
        <td><%= deal.description %></td>
        <td><%= deal.goal %></td>
        <td><%= deal.location %></td>
        <td><%= deal.start %></td>
        <td><%= deal.end %></td>
        <td><%= deal.published %></td>
        <td><%= deal.private %></td>
        <td><%= deal.amount %></td>
        <td><%= link_to 'Show', deal %></td>
        <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
        <td><%= link_to 'Destroy', deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

