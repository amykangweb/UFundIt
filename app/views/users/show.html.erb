<h1><%= @user.name %></h1>

<%= image_tag @user.gravatar_url %>

<%= render 'form_profile' %>

<h2>Commited to (deals) </h2>
<% if @user.deals.empty? %>
  <p>No deal commitments.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Goal</th>
        <th>Location</th>
        <th>Voucher Amount</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <% @user.deals.each do |deal| %>
          <tr>
            <td><%= link_to deal.title, deal %></td>
            <td><%= image_tag(deal.image.url, id: 'deal-image') if deal.image? %></td>
            <td><%= deal.description %></td>
            <td><%= deal.goal %></td>
            <td><%= deal.location %></td>
            <td><%= deal.end %></td>
            <td><%= deal.amount %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
<% end %>

<h2>Deals <%= @user.name %> created: </h2>

<% if @user.owned_deals.empty? %>
  <p>No sponsored deals.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Image</th>
        <th>Description</th>
        <th>Goal</th>
        <th>Location</th>
        <th>Start</th>
        <th>End</th>
        <th>Published</th>
        <th>Private</th>
        <th>Amount</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <% @user.owned_deals.each do |deal| %>
          <tr>
            <td><%= link_to deal.title, deal %></td>
            <td><%= deal.image %></td>
            <td><%= deal.description %></td>
            <td><%= deal.goal %></td>
            <td><%= deal.location %></td>
            <td><%= deal.start %></td>
            <td><%= deal.end %></td>
            <td><%= deal.published %></td>
            <td><%= deal.private %></td>
            <td><%= deal.amount %></td>
            <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
            <td><%= link_to 'Destroy', deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
<% end %>
